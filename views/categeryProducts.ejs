<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products by Category</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">Products by Category</h1>

        <% if (products.length > 0) { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <% products.forEach(product => { %>
                    <div class="bg-white shadow-md rounded-lg p-4">
                        <img src="<%= product.thumbnail %>" alt="<%= product.title %>" class="w-full h-48 object-contain rounded-lg">
                        <h2 class="text-xl font-semibold text-gray-800 mt-4"><%= product.title %></h2>
                        <p class="text-gray-600 mt-2">â‚¹<%= product.price.toFixed(2) %></p>
                        <a href="/product/<%= product._id %>" class="block bg-blue-600 text-white text-center py-2 rounded-lg mt-4 hover:bg-blue-700 transition">
                            View Details
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-gray-600">No products found in this category.</p>
        <% } %>
    </div>
</body>
</html>
